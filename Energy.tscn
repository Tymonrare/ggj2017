script/source = "extends Control\n\nvar Energy=200;\nvar prevEnergy = 200;\nvar continues_pressed = false;\nvar energyPower = 0;\n\nfunc _ready():\n\tset_process(true);\n\tEnergy = Globals.get(\"game_saver\").savedict.maxEnergy;\n\tprevEnergy = Energy;\n\tget_node(\"Panel\").set_size(Vector2(Energy,20));\n\nvar hintSpawned = false;\n\nfunc _process(delta):\n\t\n\tif(Input.is_mouse_button_pressed(BUTTON_LEFT) && Globals.get(\"curr_pressed_bubble\")):\n\t\tcontinues_pressed = true;\n\t\tif(Energy > 0):\n\t\t\tEnergy -= 25*delta;\n\t\telse:\n\t\t\tEnergy = 0;\n\t\t\tget_node(\"../restartButton\").set_hidden(false);\n\t\t\tvar appearText = load(\"res://objs/AppearLabel.tscn\").instance();\n\t\t\tget_node(\"Panel\").add_child(appearText);\n\t\t\tappearText.set_text(\"OUT OF ENERGY!\");\n\t\t\tif(!hintSpawned):\n\t\t\t\thintSpawned = true;\n\t\t\t\tvar appearText2 = load(\"res://objs/AppearLabel.tscn\").instance();\n\t\t\t\tget_node(\"../restartButton\").add_child(appearText2);\n\t\t\t\tappearText2.set_text(\"You can buy upgrades now\");\n\t\t\t\tappearText2.set_pos(Vector2(-100,-30));\n\t\t\n\t\tvar x = prevEnergy - Energy;\n\t\tenergyPower = pow(x,0.5)*Globals.get(\"game_saver\").savedict.explodeForce;\n\t\tGlobals.set(\"last_energy_usage\", prevEnergy - Energy);\n\t\tGlobals.set(\"last_energy_usage_power\", energyPower);\n\t\tget_node(\"particles\").set_lifetime(7*(Energy/Globals.get(\"game_saver\").savedict.explodeForce));\n\t\tget_node(\"Panel\").set_size(Vector2(Energy,20));\n\t\tget_node(\"infectPowerPanel\").set_size(Vector2(energyPower/5,20));\n\t\t\n\telif(continues_pressed):\n\t\tcontinues_pressed = false;\n\t\tprevEnergy = Energy;\n\t\n\t"

